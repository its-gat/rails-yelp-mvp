<div>
  <div class="row text-center justify-content-center">
      <h1 class="m-5">Restaurants list</h1>
      <%= link_to "Add a restaurant", new_restaurant_path, class:'btn btn-primary mb-4' %>
        <% @restaurants.each do |restaurant| %>
          <div class="col-6 card p-4 m-2">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text">Address: <%= restaurant.address %></p>
            <p class="card-text">Category: <%= restaurant.category %></p>
            <%= link_to "Show this restaurant", restaurant, class: 'btn btn-primary' %>
          </div>
        <% end %>
  </div>
</div>
